{% extends 'base.html.twig' %}

{% block title %}FORMULARIO DE REGISTRO{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <!-- Incluye Bootstrap CSS si no está ya incluido -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}
{% block body %}
<div class="container text-center my-5">
        <img src="{{ asset('images/logo.png') }}" alt="Logo" class="img-fluid" style="max-width: 75%;">
    </div>
<div class="min-vh-100 d-flex justify-content-center align-items-center  p-4">
    <div class="card shadow-lg w-100" style="max-width: 500px;">
        <div class="d-grid gap-2 col-10 mx-auto my-2">
        <a href="{{ path('app_lista') }}" class="btn btn-secondary">VOLVER AL INICIO</a>
    </div>
        <div class="card-body p-4">
            <h2 class="text-center mb-4">FORMULARIO DE REGISTRO</h2>

            {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

            <div class="mb-3">
                {{ form_label(form.name, 'NOMBRE', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'INGRESE SU NOMBRE'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.name) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.email, 'CORREO ELECTRÓNICO', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'INGRESE SU CORREO'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.email) }}
                </div>
            </div>          
            <div class="mb-3">
                {{ form_label(form.date, 'FECHA DE NACIMIENTO Ej: 01-01-2000', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.date, {'attr': {'class': 'form-control', 'placeholder': 'DD-MM-AAAA'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.date) }}
                </div>
            </div>
            <div class="mb-3">
                {{ form_label(form.description, 'DESCRIPCIÓN', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'DESCRIPCIÓN DE SU ACTIVIDAD LABORAL'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.description) }}
                </div>
            </div>
            <div class="mb-3">
                {{ form_label(form.phone, 'TELÉFONO', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.phone, {'attr': {'class': 'form-control', 'placeholder': 'TELÉFONO'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.phone) }}
                </div>
            </div>
            <div class="mb-3">
                {{ form_label(form.dni, 'DNI', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.dni, {'attr': {'class': 'form-control', 'placeholder': 'DNI'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.dni) }}
                </div>
            </div>
            <div class="mb-3">
                {{ form_label(form.address, 'DIRECCIÓN', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.address, {'attr': {'class': 'form-control', 'placeholder': 'DIRECCIÓN'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.address) }}
                </div>
            </div>
                        
              <div class="mb-3">
                {{ form_label(form.oficio, 'OFICIO', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.oficio, {'attr': {'class': 'form-control', 'placeholder': '-- SELECCIONAR UN OFICIO --', 'style': 'text-transform: uppercase'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.oficio) }}
                </div>

            <div class="mb-3">
                <button type="button" class="btn btn-primary mt-4" data-toggle="modal" data-target="#recomendacionModal">
                    SOLICITAR LA INSCRIPCION DE UN OFICIO 
                </button>
            </div>

            <!-- Modal -->

               
            </div>
              <div class="mb-3">
    {{ form_label(form.delegacion, 'DELEGACIÓN', {'label_attr': {'class': 'form-label'}}) }}
    <div class="form-check-group">
        {% for child in form.delegacion %}
            <div class="form-check mb-3"> <!-- Espacio entre cada checkbox -->
                {{ form_widget(child, {'attr': {'class': 'form-check-input me-3'}}) }}
                {{ form_label(child) }}
            </div>
        {% endfor %}
    </div>
    <div class="invalid-feedback">
        {{ form_errors(form.delegacion) }}
    </div>
</div>
            <div class="mb-3">
                {{ form_label(form.workAddress, 'DIRECCIÓN DE TRABAJO (OPCIONAL)', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.workAddress, {'attr': {'class': 'form-control', 'placeholder': 'DIRECCIÓN DE TRABAJO'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.workAddress) }}
                </div>
            </div>
            <div class="mb-3">
                {{ form_label(form.payment, 'TIPO DE PAGO', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.payment, {'attr': {'class': 'form-control', 'placeholder': 'TIPO DE PAGO'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.payment) }}
                </div>
            </div>
            <div class="mb-3">
                {{ form_label(form.time, 'HORARIO DE TRABAJO', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.time, {'attr': {'class': 'form-control', 'placeholder': 'HORARIO DE TRABAJO'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.time) }}
                </div>
            </div>
    <div class="mb-3 d-flex align-items-center">
    {{ form_label(form.certification, '¿POSEE CERTIFICACIÓN?', {'label_attr': {'class': 'form-label me-2'}}) }}

    <div class="form-check form-check-inline me-3">
        {{ form_widget(form.certification.0, {'attr': {'class': 'form-check-input'}}) }}
        {{ form_label(form.certification.0, 'SÍ', {'label_attr': {'class': 'form-check-label'}}) }}
    </div>

    <div class="form-check form-check-inline">
        {{ form_widget(form.certification.1, {'attr': {'class': 'form-check-input'}}) }}
        {{ form_label(form.certification.1, 'NO', {'label_attr': {'class': 'form-check-label'}}) }}
    </div>

    <div class="invalid-feedback">
        {{ form_errors(form.certification) }}
    </div>
</div>
            <div class="mb-3">
                {{ form_label(form.institution, 'INSTITUCIÓN', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.institution, {'attr': {'class': 'form-control', 'placeholder': 'INSTITUCIÓN CERTIFICANTE'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.institution) }}
                </div>
            </div>
            <div class="mb-3">
                {{ form_label(form.recomendation, 'RECOMENDACIÓN', {'label_attr': {'class': 'form-label text-uppercase'}}) }}
                {{ form_widget(form.recomendation, {'attr':{'class': 'form-control text-uppercase', 'placeholder': 'POSEE ALGUNA RECOMENDACIÓN'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.recomendation) }}
                </div>
            </div>
            <div class="mb-3">
    {{ form_label(form.imageFile, 'IMAGEN/LOGO (OPCIONAL)', {'label_attr': {'class': 'form-label text-uppercase'}}) }}
    {{ form_widget(form.imageFile, {'attr': {'class': 'form-control', 'placeholder': 'Seleccionar Imagen/Logo', 'required': false}}) }}
    <div class="invalid-feedback">
        {{ form_errors(form.imageFile) }}
    </div>
</div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary text-uppercase">REGISTRAR</button>
            </div>
            
            {{ form_end(form) }}

        </div>
                    <div class="modal fade" id="recomendacionModal" tabindex="-1" role="dialog" aria-labelledby="recomendacionModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="recomendacionModalLabel">SOLICITUD DE OFICIO</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form id="recomendacionForm" method="POST" action="{{ path('crear_recomendacion') }}">
                                <div class="form-group">
                                    <label for="recomendacionText">POR FAVOR INGRESE UNA DESCRIPCION DEL OFICIO QUE DESEA SOLICITAR (LA SOLICITUD ESTA SUJETA A APROBACION)</label>
                                    <input type="text" class="form-control" id="recomendacionText" name="recomendacionText" required>
                                </div>
                                <!-- Puedes añadir más campos si es necesario -->
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                            <button type="submit" form="recomendacionForm" class="btn btn-primary">Guardar</button>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- Incluye jQuery y Bootstrap JS si no están ya incluidos -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
